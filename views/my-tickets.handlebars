<div class="content">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
        <h1 style="color: #333; margin: 0;">Mis Compras</h1>
        <a href="/products" style="padding: 10px 20px; background: #667eea; color: white; text-decoration: none; border-radius: 5px; font-weight: bold;">
            Seguir Comprando
        </a>
    </div>
    
    {{#if hasTickets}}
        {{#each tickets}}
        <div style="background: #f8f9fa; border-radius: 10px; padding: 25px; margin-bottom: 20px; box-shadow: 0 3px 10px rgba(0,0,0,0.1);">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; padding-bottom: 15px; border-bottom: 2px solid #ddd;">
                <div>
                    <h3 style="color: #333; margin: 0 0 8px 0;">Ticket {{this.code}}</h3>
                    <p style="color: #666; margin: 0; font-size: 0.95rem;">
                        üìÖ {{formatDate this.purchase_datetime}}
                    </p>
                </div>
                <div style="text-align: right;">
                    <span style="display: inline-block; padding: 8px 20px; border-radius: 20px; font-weight: bold; font-size: 0.9rem;
                        {{#if (eq this.status 'completed')}}background: #d4edda; color: #155724;{{/if}}
                        {{#if (eq this.status 'partial')}}background: #fff3cd; color: #856404;{{/if}}
                        {{#if (eq this.status 'pending')}}background: #d1ecf1; color: #0c5460;{{/if}}
                        {{#if (eq this.status 'cancelled')}}background: #f8d7da; color: #721c24;{{/if}}">
                        {{#if (eq this.status 'completed')}}‚úì Completada{{/if}}
                        {{#if (eq this.status 'partial')}}‚ö† Parcial{{/if}}
                        {{#if (eq this.status 'pending')}}‚è≥ Pendiente{{/if}}
                        {{#if (eq this.status 'cancelled')}}‚úó Cancelada{{/if}}
                    </span>
                </div>
            </div>
            
            <div style="background: white; border-radius: 8px; padding: 15px; margin-bottom: 15px;">
                <h4 style="color: #555; margin: 0 0 15px 0; font-size: 1rem;">Productos:</h4>
                {{#each this.products}}
                <div style="display: grid; grid-template-columns: 3fr 1fr 1fr 1fr; gap: 15px; padding: 12px 0; border-bottom: 1px solid #eee; align-items: center;">
                    <div>
                        <strong style="color: #333;">{{this.product.title}}</strong>
                        <br>
                        <small style="color: #666;">{{this.product.code}}</small>
                    </div>
                    <div style="text-align: center; color: #667eea; font-weight: bold;">
                        ${{this.price}}
                    </div>
                    <div style="text-align: center; color: #666;">
                        √ó {{this.quantity}}
                    </div>
                    <div style="text-align: right; color: #28a745; font-weight: bold; font-size: 1.1rem;">
                        ${{this.subtotal}}
                    </div>
                </div>
                {{/each}}
            </div>
            
            <div style="text-align: right; padding: 15px 0; border-top: 2px solid #667eea;">
                <span style="font-size: 1.3rem; color: #666;">Total: </span>
                <span style="font-size: 1.8rem; font-weight: bold; color: #28a745;">
                    {{formatMoney this.amount}}
                </span>
            </div>
        </div>
        {{/each}}
    {{else}}
        <div style="background: #f8f9fa; border-radius: 10px; padding: 60px; text-align: center; box-shadow: 0 3px 10px rgba(0,0,0,0.1);">
            <div style="font-size: 5rem; margin-bottom: 20px;">üé´</div>
            <h2 style="color: #666; margin-bottom: 15px;">No tienes compras todav√≠a</h2>
            <p style="color: #999; margin-bottom: 30px; font-size: 1.1rem;">
                Explora nuestro cat√°logo y realiza tu primera compra
            </p>
            <a href="/products" style="display: inline-block; padding: 15px 30px; background: #667eea; color: white; text-decoration: none; border-radius: 5px; font-weight: bold; font-size: 1.1rem;">
                Ver Productos
            </a>
        </div>
    {{/if}}
</div>

<style>
    @media (max-width: 768px) {
        div[style*="grid-template-columns"] {
            grid-template-columns: 1fr !important;
            text-align: left !important;
        }
    }
</style>